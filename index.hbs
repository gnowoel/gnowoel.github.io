---
layout: default
---

<div class="home">

  <h1 class="page-heading">Posts</h1>

  <ul class="post-list">
    {{#each site.posts}}
      <li>
        <span class="post-meta">{{datetime date}}</span>

        <h2>
          <a class="post-link" href="{{fullpath url}}">{{title}}</a>
        </h2>
      </li>
    {{/each}}
  </ul>

  <p class="rss-subscribe">subscribe <a href="{{fullpath '/feed.xml'}}">via RSS</a></p>

</div>
