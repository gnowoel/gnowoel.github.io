layout: default
---

<article class="post" itemscope itemtype="http://schema.org/BlogPosting">

  <header class="post-header">
    <h1 class="post-title" itemprop="name headline">{{page.title}}</h1>
    <p class="post-meta"><time datetime="{{datetime page.date 'iso8601'}}" itemprop="datePublished">{{datetime page.date}}</time>{{#if page.author}} â€¢ <span itemprop="author" itemscope itemtype="http://schema.org/Person"><span itemprop="name">{{page.author}}</span></span>{{/if}}</p>
  </header>

  <div class="post-content" itemprop="articleBody">
    {{content}}
  </div>

</article>
